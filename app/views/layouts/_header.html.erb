          <li>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-dark" %></li>
          </li>

        <% elsif admin_signed_in? %>
          <!-- 管理者がログインしている時 -->
          <li>
            <%= link_to "店舗一覧", admin_stores_path, class: "btn btn-outline-dark" %>
          </li>
          <li>
            <%= link_to "会員一覧", admin_users_path, class: "btn btn-outline-dark" %>
          </li>
          <li>
            <%= link_to "レビュー履歴一覧" , admin_reviews_path, class: "btn btn-outline-dark" %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark" %>
          </li>

