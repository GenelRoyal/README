      <span class="welcome-message">ようこそ、<%= current_user.family_name + current_user.first_name %>さん！</span>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <!--ユーザーがログインしている時 -->
          <li>
            <%= link_to "マイページ", users_mypage_path, class: "btn btn-outline-dark" %>
          </li>
          <li>
            <%= link_to "店舗一覧", stores_path, class: "btn btn-outline-dark" %>
          </li>
          <li>
            <%= link_to "いいね一覧", liked_reviews_user_path(current_user), class: "btn btn-outline-dark" %>
