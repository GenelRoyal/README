<div class="container my-5">

  <!-- タイトル -->
  <div class="row mb-5 text-center">
    <h4 class="heading-title fw-bold text-primary">新規会員登録</h4>
  </div>

  <!-- フォーム -->
  <div class="card shadow p-4">
    <%= form_with model: @user, url: user_registration_path, class: "needs-validation" do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <!-- プロフィール画像 -->
      <div class="mb-3 row align-items-center">
        <label class="col-sm-3 fw-bold text-end">プロフィール画像</label>
        <div class="col-sm-6">
          <%= f.file_field :image, placeholder: "ファイルを選択", accept: "image/*", class: "form-control" %>
        </div>
      </div>

      <!-- 名前 -->
      <div class="mb-3 row align-items-center">
        <label class="col-sm-3 fw-bold text-end">名前</label>
        <div class="col-sm-4">
          <%= f.text_field :family_name, autocomplete: "family_name", autofocus: true, class: "form-control", placeholder: "姓" %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control", placeholder: "名" %>
        </div>
      </div>

      <!-- フリガナ -->
      <div class="mb-3 row align-items-center">
        <label class="col-sm-3 fw-bold text-end">フリガナ</label>
        <div class="col-sm-4">
          <%= f.text_field :family_name_kana, autocomplete: "family_name_kana", class: "form-control", placeholder: "セイ" %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :first_name_kana, autocomplete: "last_name_kana", class: "form-control", placeholder: "メイ" %>
        </div>
      </div>

      <!-- メールアドレス -->
      <div class="mb-3 row align-items-center">
        <label class="col-sm-3 fw-bold text-end">メールアドレス</label>
        <div class="col-sm-6">
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
        </div>
      </div>

      <!-- パスワード -->
      <div class="mb-3 row align-items-center">
        <label class="col-sm-3 fw-bold text-end">
          パスワード
          <% if @minimum_password_length %>
          <span class="small text-muted">(最小 <%= @minimum_password_length %>文字)</span>
          <% end %>
        </label>
        <div class="col-sm-6">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
        </div>
      </div>

      <!-- パスワード(確認用) -->
      <div class="mb-3 row align-items-center">
        <label class="col-sm-3 fw-bold text-end">パスワード(確認用)</label>
        <div class="col-sm-6">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード確認" %>
        </div>
      </div>

      <!-- ボタン -->
      <div class="mb-4 text-center">
        <%= f.submit "新規登録", class: "btn btn-success px-5 py-2 fw-bold" %>
      </div>
    <% end %>
  </div>

  <!-- 既存ユーザーへの案内 -->
  <div class="row mt-4 text-center">
    <p class="fs-6">
      <span class="text-secondary">既に登録済の方は<%= render "public/shared/links" %>からログインしてください。</span>
    </p>
  </div>

</div>