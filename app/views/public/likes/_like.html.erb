<% if user_signed_in? %>
  <% if review.liked_by?(current_user) %>
    <%= link_to store_review_likes_path(review_id:review.id), method: :delete, remote: true do %>
      <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
      <span style="color: red;"><%= review.likes.count %>
    <% end %>
  <% else %>
    <%= link_to store_review_likes_path(review_id:review.id), method: :post, remote: true do %>
      <i class="fas fa-heart" aria-hidden="true"></i><%= review.likes.count %>
    <% end %>
  <% end %>
<% else %>
  <!-- ログインしていない場合はボタンを非表示にする -->
<% end %>