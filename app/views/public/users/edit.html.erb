<div class='container my-5'>

  <h3 class='row mb-5'>
    <strong><span class='heading-title'>会員情報編集</span></strong>
  </h3>
  
  <%= render 'layouts/errors', obj: @user %>

  <%= form_with model: @user, url: users_information_path, method: :patch do |f| %>
        <div class='row form-group'>
          <label class="col-2">プロフィール画像</label>
          <%= f.file_field :image, placeholder: "ファイルを選択", accept: "image/*", class: "col-3 m-1"%>
        </div>
        
        <div class='row form-group'>
          <label class="col-2">氏名</label>
          <%= f.text_field :family_name, class: 'form-control', class: "col-2 m-1" %>
          <%= f.text_field :first_name, class: 'form-control', class: "col-2 m-1" %>
        </div>

        <div class='row form-group'>
          <label class="col-2">フリガナ</label>
          <%= f.text_field :family_name_kana, class: 'form-control', class: "col-2 m-1" %>
          <%= f.text_field :first_name_kana, class: 'form-control', class: "col-2 m-1" %>
        </div>

        <div class='row form-group'>
          <label class="col-2">メールアドレス</label>
          <%= f.text_field :email, class: 'form-control', class: "col-2 m-1" %>
        </div>

        <div class='row form-group'>
          <div class="col-2"></div>
          <%= f.submit "編集内容を保存", class:"col-2 btn btn-success" %>
          <div class="col-1"></div>
          <%= link_to "退会する", users_unsubscribe_path , class:"col-2 btn btn-danger" %>
        </div>
        <% end %>

</div>