<div class="container my-5">

  <!-- タイトル -->
  <div class="row justify-content-center mb-4">
    <h3 class="heading-title fw-bold text-primary text-center">会員情報編集</h3>
  </div>

  <!-- エラー表示 -->
  <div class="row justify-content-center mb-4">
    <%= render 'layouts/errors', obj: @user %>
  </div>

  <!-- フォーム -->
  <div class="card shadow p-4">
    <%= form_with model: @user, url: users_information_path, method: :patch, class: "needs-validation" do |f| %>
      
      <!-- プロフィール画像 -->
      <div class="mb-3 row align-items-center">
        <label class="col-sm-3 text-end fw-bold">プロフィール画像</label>
        <div class="col-sm-6">
          <%= f.file_field :image, placeholder: "ファイルを選択", accept: "image/*", class: "form-control" %>
        </div>
      </div>

      <!-- 氏名 -->
      <div class="mb-3 row align-items-center">
        <label class="col-sm-3 text-end fw-bold">氏名</label>
        <div class="col-sm-4">
          <%= f.text_field :family_name, class: "form-control", placeholder: "姓" %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :first_name, class: "form-control", placeholder: "名" %>
        </div>
      </div>

      <!-- フリガナ -->
      <div class="mb-3 row align-items-center">
        <label class="col-sm-3 text-end fw-bold">フリガナ</label>
        <div class="col-sm-4">
          <%= f.text_field :family_name_kana, class: "form-control", placeholder: "セイ" %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :first_name_kana, class: "form-control", placeholder: "メイ" %>
        </div>
      </div>

      <!-- メールアドレス -->
      <div class="mb-3 row align-items-center">
        <label class="col-sm-3 text-end fw-bold">メールアドレス</label>
        <div class="col-sm-6">
          <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
        </div>
      </div>

      <!-- ボタン -->
      <div class="row mt-4 text-center">
        <div class="col-sm-6 text-end">
          <%= f.submit "編集内容を保存", class: "btn btn-success px-4 py-2" %>
        </div>
        <div class="col-sm-6 text-start">
          <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger px-4 py-2" %>
        </div>
      </div>

    <% end %>
  </div>

</div>