
<h2><span>全マシマシでお願いします！！</span></h2>

<div class="row">
  <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
</div>

<div class='form-group row'>
  <div class='col'>
    <h4 class='text-center border-bottom'>
      新着店舗
    </h4>
    <div class="d-flex flex-wrap gap-3" >
      <% @stores.each do |store| %>
        <%= link_to store_path(store.id), class: "text-decoration-none" do %>
          <div class="card" >
            <%= image_tag store.get_image(300,300), class: "card-img-top rounded shadow-sm" %>
            <div class="card-body text-body">
              <h5 class="card-title text-primary"><%= store.name %></h5>
              <p class="card-text text-primary">¥<%= store.price.to_s(:delimited) %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="d-flex">
      <%= link_to "全ての店舗を見る >>", stores_path, class: "ms-auto right-link" %>
    </div>
</div>