<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="mb-4 text-center">店舗新規登録</h2>
      <%= render 'layouts/errors', obj: @store %>
      <%= form_with model: @store, url: admin_stores_path, method: :post, local: true, html: { class: "form" } do |f| %>
        
        <div class="form-group mb-3">
          <%= f.label :image, "店舗画像", class: "form-label" %>
          <%= f.file_field :image, class: "form-control", accept: "image/*" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :name, "店舗名", class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "君に出会えて" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :address, "住所", class: "form-label" %>
          <%= f.text_field :address, class: "form-control", placeholder: "愛知県名古屋市中川区" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :tell_number, "電話番号", class: "form-label" %>
          <%= f.telephone_field :tell_number, class: "form-control", placeholder: "098-XXXX-XXXX" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :price, "価格", class: "form-label" %>
          <div class="input-group">
            <%= f.number_field :price, class: "form-control", placeholder: "1000" %>
            <span class="input-group-text">円</span>
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :business_hours, "営業時間", class: "form-label" %>
          <%= f.text_area :business_hours, class: "form-control", placeholder: "XX:XX~XX:XX 定休日" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :content, "店舗説明", class: "form-label" %>
          <%= f.text_area :content, class: "form-control", placeholder: "座席数 駐車場有無" %>
        </div>

        <div class="form-group text-center mt-4">
          <%= f.submit "新規登録", class: "btn btn-success px-5 py-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>