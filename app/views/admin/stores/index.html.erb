<div class="container my-5">
  <div class="row mb-3">
    <h4 class="col-6">
      <span class="heading-title">店舗一覧</span>
    </h4>
    <!--新規登録のリンクを右に表示-->
    <h1 class="col-6 text-right">
      <%= link_to new_admin_store_path, class: "text-right" do %>
        <i class="fa-sharp fa-solid fa-circle-plus"></i>
      <% end %>
    </h1>
  </div>

  <div class="row justify-content-center">
    <div class="col-12">
      <table class="table table-hover table-inverse table-borderless border-bottom">
        <thead class="table-secondary">
          <tr>
            <th class="col-1">店舗ID</th>
            <th class="col-3">店舗名</th>
            <th class="col-2">価格</th>
            <th class="col-3">営業時間</th>
          </tr>
        </thead>
        <tbody>
          <% @stores.each do |store| %>
            <tr>
              <td><%= store.id %></td>
              <td><%= link_to store.name ,admin_store_path(store) %></td>
              <td><%= store.price.to_s(:delimited, delimiter: ',') %>円</td>
              <td><%= store.business_hours %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center">  
   <%= paginate @stores %>
  </div>
</div>  